  <test-set name="comment">
    <description>
      <p>This test was written to test <code>comment</code>s, but it tests
      <code>ixml</code> and <code>rule</code> too.</p>
    </description>
    <created by="ndw" on="2022-03-26"/>
    <ixml-grammar-ref href="comment.ixml"/>
    <grammar-test>
      <result>
	<assert-xml-ref href="comment.output.xml"/>
      </result>
    </grammar-test>
  </test-set>

