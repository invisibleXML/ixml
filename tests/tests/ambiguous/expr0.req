{expr: operand+operator.
operand: id; number.
-id: @name.
name: letter+.
-number: @value.
value: digit+.
letter: ["a"-"z"].
digit: ["0"-"9"].
operator: "+"; "-"; "×"; "÷".
                             }
expr: id; number; expr, operator, expr.
id: ["a"-"z"]+.
number: ["0"-"9"]+.
operator: "+"; "-"; "×"; "÷".
#
a÷b÷c
#
<!-- AMBIGUOUS
     The input from line.pos 1.1 to 1.8 can be interpreted as 'expr' in 2 different ways:
     1: expr[1.1:]:  expr[:1.2] operator[:1.4] expr[:1.8] 
     2: expr[1.1:]:  expr[:1.5] operator[:1.7] expr[:1.8] 
-->

<expr ixml:state="ambiguous" xmlns:ixml="http://invisiblexml.org/NS">
   <expr>
      <id>a</id>
   </expr>
   <operator>÷</operator>
   <expr>
      <expr>
         <id>b</id>
      </expr>
      <operator>÷</operator>
      <expr>
         <id>c</id>
      </expr>
   </expr>
</expr>
